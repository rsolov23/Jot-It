<form class="mx-auto mt-5 login-form p-3 rounded" style="width: 40%;">
  <div class="form-group">
    <label for="username-login" class="username-login">Username</label>
    <input
      type="text"
      class="form-control"
      id="username-login"
      placeholder="Enter email"
    />
  </div>
  <div class="form-group">
    <label for="password-login" class="password-login">Password</label>
    <input
      type="password"
      class="form-control"
      id="password-login"
      placeholder="Password"
    />
  </div>
  <button id="login-btn" class="btn bg-light">Submit</button>
</form>

